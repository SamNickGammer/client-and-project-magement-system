generator client {
  provider   = "prisma-client-js"
  output     = "../src/generated/prisma"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

enum AccessLevel {
  DIRECTOR
  HR
  DEVELOPER
  MARKETING
}

model User {
  id                 String       @id @default(uuid())
  email              String       @unique
  password           String
  name               String?
  accessLevel        AccessLevel?
  image              String?
  phone              String?
  status             String?
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
  lastLoginAt        DateTime?
  currentTokenExpiry DateTime?
}
